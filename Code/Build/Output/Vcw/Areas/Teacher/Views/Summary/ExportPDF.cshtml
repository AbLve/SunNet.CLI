@using Sunnet.Cli.Business.Vcw.Models;
@using Sunnet.Framework.Extensions;
@using Sunnet.Cli.Business.Common;
@{
    ViewBag.Title = "pdf";
    Layout = "~/Views/Shared/_Layout_Report.cshtml";
}
<div class="main-content main-content">
    <div class="content-body-tab">
        <table class="table table-striped table-hover" width="99%">
            <thead>
                <th>File Name</th>
                <th>ID</th>
                <th>Video Type</th>
                <th>Upload Date</th>
                <th>Date Recorded	</th>
                <th>Context</th>
                <th>File Type</th>
                <th>Status</th>
            </thead>
            <tbody>
                @foreach (FileListModel item in (List<FileListModel>)ViewBag.List)
                {
                    <tr>
                        <td style="width: 150px; text-align: center">@item.IdentifyFileName</td>
                        <td style="width: 100px; text-align: center">@item.Number</td>
                        <td style="text-align: center">@item.VideoType.ToDescription()</td>
                        <td style="width: 120px; text-align: center">@(item.UploadDate.FormatDateString())</td>
                        <td style="width: 120px; text-align: center">@(item.DateRecorded.FormatDateString())</td>
                        <td style="text-align: center">@item.Context</td>
                        <td style="width: 100px; text-align: center">@item.FileExtension</td>
                        <td style="width: 100px; text-align: center">@item.Status.ToDescription()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

