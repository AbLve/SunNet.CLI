@using Sunnet.Cli.Business.Vcw.Models;
@using Sunnet.Framework.Extensions;
@using Sunnet.Cli.Business.Common;
@{
    ViewBag.Title = "pdf";
    Layout = "~/Views/Shared/_Layout_Report.cshtml";
}
<div class="main-content main-content">
    <div class="content-body-tab">
        <table class="table table-striped table-hover" width="99%">
            <thead>
                <th>Community</th>
                <th>School</th>
                <th>Teacher</th>
                <th>Sender</th>
                <th>Due Date</th>
                <th>Wave</th>
                <th>Context</th>
                <th>Content</th>
                <th>Status</th>
            </thead>
            <tbody>
                @foreach (AssignmentListModel item in (List<AssignmentListModel>)ViewBag.List)
                {
                    <tr>
                        <td style="width: 130px; text-align: center">@item.CommunityName</td>
                        <td style="width: 130px; text-align: center">@item.SchoolName</td>
                        <td style="width: 130px; text-align: center">@item.TeacherName</td>
                        <td style="width: 130px; text-align: center">@item.SendUserName</td>
                        <td style="width: 100px; text-align: center">@(item.DueDate.FormatDateString())</td>
                        <td style="width: 50px; text-align: center">@(item.Wave.ToDescription() == "0" ? "" : item.Wave.ToDescription())</td>
                        <td style="width: auto; text-align: center">@item.Context</td>
                        <td style="width: auto; text-align: center">@item.Content</td>
                        <td style="width: 50px; text-align: center">@item.Status.ToDescription()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

