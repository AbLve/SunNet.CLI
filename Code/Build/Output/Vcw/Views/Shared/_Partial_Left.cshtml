@model Sunnet.Cli.Vcw.Models.LeftmenuModel
@using Sunnet.Cli.Core.Users.Enums
@{
    var menuClasses = LeftmenuModel.Teacher_Summary.ToList().Cast<LeftmenuModel>()
        .ToDictionary(module => module, module => module == Model ? "active" : "");
    Role userrole = (Role)ViewBag.UserRoleType;
}
<h4>
    <a class="main-ade-left-active" href="@(DomainHelper.MainSiteDomain)Home/Dashboard">
        <i class="icon-dashboard"></i>Dashboard
    </a>
</h4>
<ul>
    @if (userrole == Role.Teacher)
    {
        <li>
            <a href="/Teacher/VIP/" class="@menuClasses[LeftmenuModel.Teacher_VIP]">@LeftmenuModel.Teacher_VIP.ToDescription()</a>
        </li>
        <li>
            <a href="/Teacher/Assignment/" class="@menuClasses[LeftmenuModel.Teacher_Assignment]">@LeftmenuModel.Teacher_Assignment.ToDescription()</a>
        </li>        
        <li>
