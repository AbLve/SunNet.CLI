            <a href="/Admin/TeacherVIP/Index" class="@menuClasses[LeftmenuModel.Admin_Teachers]">@LeftmenuModel.Admin_Teachers.ToDescription()</a>
        </li>
        <li>
            <a href="/Admin/CoachAssignment/Index" class="@menuClasses[LeftmenuModel.Admin_Coaches]">@LeftmenuModel.Admin_Coaches.ToDescription()</a>
        </li>
        <li>
            <a href="/Admin/Summary/Index" class="@menuClasses[LeftmenuModel.Admin_Summary]">@LeftmenuModel.Admin_Summary.ToDescription()</a>
        </li>
    }


