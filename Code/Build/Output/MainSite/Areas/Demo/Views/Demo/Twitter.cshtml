@using Sunnet.Cli.MainSite.Controllers
@{
    ViewBag.Title = "Twitter";
}

<h2>Twitter</h2>

<div class="contact-input">
    <form id="queryForm">
        <input type="text" placeholder="get | post" class="input-con" name="method" id="method" value="get" />
        <input type="checkbox" name="base64" id="base64" value="true" /><label for="base64">Base64 Encode Authorization</label>
        <br />
        <br />
        <input type="text" placeholder="api" class="input-con" name="api" id="api" value="" /><br />
        <input type="text" placeholder="query" class="input-con" name="query" id="query" value="" /><br />
        <input type="text" placeholder="scheme" class="input-con" name="scheme" id="scheme" value="" /><br />
        <textarea type="text" placeholder="authorizatioin" class="textarea-con" style="height: 200px;" id="authorization" name="authorization"></textarea><br />
    </form>
    <button type="button" class="redbtn contact-sumbit" id="btnTest">Test</button><br />
    Response:<br />
    <textarea type="text" placeholder="result" class="textarea-con" name="result" id="result" style="height: 500px;"></textarea>
    <br />
</div>
@section Scripts
{
    <script type="text/javascript">
        jQuery(function () {
            jQuery("#btnTest").click(function () {
                jQuery.get("/api/twitter/twitter_api", jQuery("#queryForm").serialize(), function (response) {
                    jQuery("#result").val(response);
                }).error(function () {
                    jQuery("#result").val("Error");
                });
            });
        })
    </script>

}
