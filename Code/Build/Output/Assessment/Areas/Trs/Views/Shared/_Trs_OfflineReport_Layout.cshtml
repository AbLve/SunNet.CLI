@using System.Web.Optimization
@{
    Layout = null;
    if (ViewBag.Preview == null)
    {
        ViewBag.Preview = false;
    }
    if (ViewBag.Pdf == null)
    {
        ViewBag.Pdf = false;
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - TRS - Cli Engage</title>
    @RenderSection("Styles", false)
</head>
<body>
    <div class='trs-report @(ViewBag.Pdf ? "pdf" : "") @(ViewBag.Preview ? "preview" : "")'>
        @RenderBody()
    </div>
    @RenderSection("Scripts", false)
</body>
</html>

