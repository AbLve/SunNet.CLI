@{
    var wave = (byte) ViewData["wave"];
    var enableWave = "wave" + wave;
    }

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th width="60%">Age</th>
            <th width="*">Cutoff score</th>
            <th width="15%">Action</th>
        </tr>
    </thead>
    <tbody data-bind="foreach:{data:scores,as:'score'}">
        <tr data-bind="css:{'has-error':score.hasError},if:score.Wave == @(wave),visible:score.Wave == @(wave)">
            <td style="line-height: 25px;">
                <input type="hidden" name="ID" data-bind="value:ID" />
                <label class="hide" data-bind="attr:{for:'FromYear'+$index()}">From Year</label>
                <input type="text" name="FromYear" class="form-control input-sm uint _number " int="2" float="0" maxlength="2"
                       data-bind="value:FromYear,attr:{id:'FromYear'+$index()},enable:$root.@(enableWave)"
                       style="width: 50px; display: inline-block;">
                Year
                <label class="hide" data-bind="attr:{for:'FromMonth'+$index()}">From Month</label>
                <input type="text" name="FromMonth" class="form-control input-sm uint _number " int="2" float="0" maxlength="2"
                       data-bind="value:FromMonth,attr:{id:'FromMonth'+$index()},enable:$root.@(enableWave)"
                       style="width: 50px; display: inline-block;">
                Month ~
                <label class="hide" data-bind="attr:{for:'ToYear'+$index()}">To Year</label>
                <input type="text" name="ToYear" class="form-control input-sm uint _number " int="2" float="0" maxlength="2"
                       data-bind="value:ToYear,attr:{id:'ToYear'+$index()},enable:$root.@(enableWave)"
                       style="width: 50px; display: inline-block;">
                Year
                <label class="hide" data-bind="attr:{for:'ToMonth'+$index()}">To Month</label>
                <input type="text" name="ToMonth" class="form-control input-sm uint _number " int="2" float="0" maxlength="2"
                       data-bind="value:ToMonth,attr:{id:'ToMonth'+$index()},enable:$root.@(enableWave)"
                       style="width: 50px; display: inline-block;">
                Month
            </td>
            <td>
                <label class="hide" data-bind="attr:{for:'CutoffScore'+$index()}">Score</label>
                <input type="text" name="CutoffScore" class="form-control input-sm uint _number " int="4" float="0" maxlength="5"
                       data-bind="value:CutOffScore,attr:{id:'CutoffScore'+$index()},enable:$root.@(enableWave)"
                       style="width: 50px; display: inline-block;">
            </td>
            <td>
                <a class="table-btn icon-plus plus-btn" href="#"
                   data-bind="event:{click:function(){$root.newScore(@(wave));}},visible:$root.@(enableWave)" title="New"></a>
                <a href="#" class="table-btn icon-minus minus-btn" data-bind="    event:{click:$root.deleteScore}" title="Delete"></a>
            </td>
        </tr>
    </tbody>
</table>