
@{
    Layout = null;
}
<div id="modalComment" class="modal fade" data-cache="true" data-confirm="true" data-backdrop="static">
    <div class="modal-dialog-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" data-bind="text:'Comment - ' + commentingMeasure().name">
                    Title
                </h4>
            </div>
            <div class="modal-body">
                <div class="modal-main-content">
                    <div class="modal-content-body">
                        <form class="form-horizontal" data-ajax="true" role="form" novalidate="novalidate">
                            <input data-val="true" data-val-number="The field ID must be a number." data-val-required="The ID field is required." id="ID" name="ID" type="hidden" value="1500">    <div class="form-group">
                                <label class="control-label col-sm-3 required" for="Comment" aria-required="true">Comment</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" cols="20" id="Comment" name="Comment" rows="2"
                                              data-bind="value:commentingMeasure().comment" maxlength="100"></textarea>
                                    <span class="field-validation-valid" data-valmsg-for="Comment" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button class="mainbutton modal-btn submit-btn" type="button" data-bind="click:updateComment">Save</button>
                                <button class="mainbutton modal-btn cancel-btn" type="button" data-dismiss="modal">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>