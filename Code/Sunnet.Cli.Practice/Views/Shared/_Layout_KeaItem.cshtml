@using Sunnet.Cli.Assessment.Areas.Cpalls.Controllers
<!DOCTYPE html>
@{
    const string siteName = "Cli Engage";
    var relativePath = ((RazorView)Html.ViewContext.View).ViewPath;
    var lastModified = FileHelper.GetFileLastModified(Server.MapPath(relativePath));
    var moduleTitle = "CIRCLE Assessment System";
    moduleTitle = relativePath.IndexOf("Areas/Ade", StringComparison.CurrentCultureIgnoreCase) >= 0 ? "Ade" : moduleTitle;
    moduleTitle = relativePath.IndexOf("Areas/Cec", StringComparison.CurrentCultureIgnoreCase) > 0 ? "CEC" : moduleTitle;
    moduleTitle = relativePath.IndexOf("Areas/Cot", StringComparison.CurrentCultureIgnoreCase) > 0 ? "COT" : moduleTitle;
    moduleTitle = relativePath.IndexOf("Areas/Trs", StringComparison.CurrentCultureIgnoreCase) > 0 ? "TRS" : moduleTitle;
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    @if (ViewContext.Controller is StudentController || ViewContext.Controller is ClassController || ViewContext.Controller is SchoolController)
    {
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0, minimum-scale=1, maximum-scale=1.0" />
    }
    else
    {
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1" />
    }
    <meta name="keyword" content="CLI Engage | A comprehensive professional development platform for early childhood providers and pre-k teachers in Texas" />
    <title>@ViewBag.Title - @moduleTitle - @siteName</title>
    @Styles.Render("~/css/basic")
    @RenderSection("Styles", false)
    @Scripts.Render("~/scripts/modernizr")
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        @Scripts.Render("~/scripts/ie68")
    <![endif]-->
    @if (ViewBag.Debug != null && (bool)ViewBag.Debug)
    {
        <script type="text/javascript">
            window._DEBUG = true;
        </script>
    }
    <script type="text/javascript">
        window._TimeoutUrl_ = "@(ViewBag.TimeoutUrl)";
        window._staticDomain_ = "@DomainHelper.StaticSiteDomain";
    </script>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
</head>
<body>
    <!-- Begin New Design -->
    <div class="container-fluid publicLayout">
        <div class="row" style="margin-right: 0;">
            <div class="col-sm-12" style="padding: 0; text-align: center">
                <img class="img-responsive" src="/images/ReDesign/Banner/CLIe-HOME-banner_tinystrip.png" alt="CLI Engage" />
            </div>
        </div>
    </div>

    @if (ViewBag.Login)
    {
        <div class="col-sm-2 logbox" style="top: 28px;">
            <a class="header-sign-btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" href="#" data-toggle="modal"><i class="icon-user"></i>@ViewBag.FirstName
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                <li role="presentation"><a style="color: #656565" class="menutext" role="menuitem" tabindex="-1" href="@(DomainHelper.MainSiteDomain)home/dashboard"><i class="icon-dashboard"></i>Dashboard</a></li>
                <li role="presentation"><a style="color: #656565" class="menutext" role="menuitem" tabindex="-1" href="@(DomainHelper.MainSiteDomain)Profile/MyProfile"><i class="icon-bullhorn"></i>My Profile</a></li>
            </ul>
            |  <a href="@(DomainHelper.SsoSiteDomain)home/LogOut">LOGOUT</a>
        </div>
    }
    else
    {
        <div class="col-sm-2 logbox">
            <div style="display: table-cell; vertical-align: middle"><a href="@(DomainHelper.MainSiteDomain)home/signup">SIGN UP</a> | <a href="@(DomainHelper.MainSiteDomain)home/signin">LOGIN</a></div>
        </div>
    }

    @Html.Partial("_Partial_Menu")
    <!-- End New Desgin -->

    @RenderSection("Banner", false)
    @RenderSection("Slides", false)
    <div class="main-container renderBody-style" style="margin-top: -50px; font-size: 14px;">
        @if (IsSectionDefined("LeftMenu"))
        {
            <div title="Toggle menu" class="toggle-menu" id="toggle-menu" data-target="#menu" data-main="#main_content_">
                <i style="cursor:pointer" class="icon-reorder"></i>
            </div>
            <div class="main-con-left menu-side hidden" id="menu">
                @RenderSection("LeftMenu", false)
            </div>
        }
        <div id="main_content_" class="main-con-right main-con-right-full-screen">
            @if (IsSectionDefined("BreadPath"))
            {
                <h4 class="backlink">@RenderSection("BreadPath", false)</h4>
            }
            <div class="right-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="row footer publicLayout" style="padding-top: 26px; padding-left: 0px; margin-left: 0px;font-family: 'Nobel Book', sans-serif;line-height: 1.8em;">
        <div class="col-sm-12">
            <div class="col-sm-4">
                <img class="img-responsive toolicon" style="height: 131px; float: right;" src="/images/ReDesign/UTH_CLI_co_brand_wht.png" alt="CLI Engage News">
            </div>
            <div class="col-sm-4">
