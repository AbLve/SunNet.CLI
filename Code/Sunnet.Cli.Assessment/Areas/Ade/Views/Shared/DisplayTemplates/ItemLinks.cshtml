<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th width="30%">Display Text</th>
            <th width="*">Link</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: { data: dataset, as: 'data' }">
        <tr data-bind="css: { 'has-error': data.hasError }">
            <td>
                <div data-bind="text: ThumbnailDisplayText(DisplayText), attr: { title: DisplayText }"> </div>
            </td>
            <td style="text-align:left;">
                <a data-bind="text: ThumbnailLink(Link), attr: { href: Link, title: Link }" target="_blank" class="form-link2"></a>
            </td>
        </tr>
    </tbody>
</table>
