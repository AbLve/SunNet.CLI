                <label for="chkSchoolCustomScoreReport">Custom Score Report</label>
            </div>
        </div>
        <div class="col-sm-3" style="padding-right: 0px;">
            <div class="col-sm-12">
                <input id="chkClassCompletion" name="classReports" type="checkbox" value="1" style="cursor: pointer;"
                     @(list.Any(e => e.ReportType == ReportTypeEnum.Class && e.Report == ReportEnum.Completion) ? "checked" : "")>
                <label for="chkClassCompletion">Completion </label>
            </div>
