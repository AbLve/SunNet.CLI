@using Sunnet.Cli.Core.Ade.Entities
@{
    ViewBag.Title = "Assessment Reports";
    Layout = "~/Views/Shared/_Modal_Layout.cshtml";
    var formId = PostFormHelper.GetFormId(Html.ViewContext.View);
    List<AssessmentReportEntity> list = ViewBag.AssesmentReports;
}
@section Scripts
{
    <script type="text/javascript">
        +(function () {
            registerFormCallbacks("@(formId)", {
                onPosted: function (response) {
                    closeModal($("#@(formId)"));
                }
            });
        })();
    </script>
}
@using (Ajax.BeginForm("AssignReport", "Assessment", null, PostFormHelper.DefaultAjaxOptions,
    new
    {
        @class = "form-horizontal",
        id = formId
    }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="assessmentId" value="@(Request.QueryString["assessmentId"])"/>
    <div class="form-group">
        <div class="col-sm-3">
            <div class="col-sm-12">
                Community
            </div>
        </div>
        <div class="col-sm-3">
            <div class="col-sm-12">
                School
            </div>
        </div>
        <div class="col-sm-3">
            <div class="col-sm-12">
                Class
            </div>
        </div>
        <div class="col-sm-3">
            <div class="col-sm-12">
                Student
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3">
            <div class="col-sm-12">
                <input id="chkCommunityCompletion" name="communityReports" type="checkbox" value="1" style="cursor: pointer;"
                     @(list.Any(e => e.ReportType == ReportTypeEnum.Community && e.Report == ReportEnum.Completion) ? "checked" : "")>
                <label for="chkCommunityCompletion">Completion </label>
            </div>
            <div class="col-sm-12">
                <input id="chkCommunitySummary" name="communityReports" type="checkbox" value="2" style="cursor: pointer;"
                     @(list.Any(e => e.ReportType == ReportTypeEnum.Community && e.Report == ReportEnum.Summary) ? "checked" : "")>
                <label for="chkCommunitySummary">Summary </label>
            </div>
            <div class="col-sm-12">
                <input id="chkCommunityGrowth" name="communityReports" type="checkbox" value="3" style="cursor: pointer;"
                     @(list.Any(e => e.ReportType == ReportTypeEnum.Community && e.Report == ReportEnum.Growth) ? "checked" : "")>
                <label for="chkCommunityGrowth">Growth </label>
            </div>
            <div class="col-sm-12">
                <input id="chkCommunityPercentileRank" name="communityReports" type="checkbox" value="4" style="cursor: pointer;"
                     @(list.Any(e => e.ReportType == ReportTypeEnum.Community && e.Report == ReportEnum.PercentileRank) ? "checked" : "")>
                <label for="chkCommunityPercentileRank">Percentile Rank </label>
            </div>
            <div class="col-sm-12" style="padding-right: 0;">
                <input id="chkCommunityComparisionofGrowth" name="communityReports" type="checkbox" value="5" style="cursor: pointer;"
                     @(list.Any(e => e.ReportType == ReportTypeEnum.Community && e.Report == ReportEnum.ComparisionofGrowth) ? "checked" : "")>
                <label for="chkCommunityComparisionofGrowth">Comparision of Growth </label>
            </div>
            <div class="col-sm-12" style="padding-right: 0;">
                <input id="chkCommunityCustomScoreReport" name="communityReports" type="checkbox" value="9" style="cursor: pointer;"
                       @(list.Any(e => e.ReportType == ReportTypeEnum.Community && e.Report == ReportEnum.CommunityCustomScoreReport) ? "checked" : "")>
                <label for="chkCommunityCustomScoreReport">Custom Score Report</label>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="col-sm-12">
                <input id="chkSchoolCompletion" name="schoolReports" type="checkbox" value="1" style="cursor: pointer;"
                     @(list.Any(e => e.ReportType == ReportTypeEnum.School && e.Report == ReportEnum.Completion) ? "checked" : "")>
                <label for="chkSchoolCompletion">Completion </label>
            </div>
            <div class="col-sm-12">
