                     @(list.Any(e => e.ReportType == ReportTypeEnum.Class && e.Report == ReportEnum.Growth) ? "checked" : "")>
                <label for="chkClassGrowth">Growth </label>
            </div>
            <div class="col-sm-12">
                <input id="chkClassPercentileRank" name="classReports" type="checkbox" value="4" style="cursor: pointer;"
                     @(list.Any(e => e.ReportType == ReportTypeEnum.Class && e.Report == ReportEnum.PercentileRank) ? "checked" : "")>
                <label for="chkClassPercentileRank">Percentile Rank </label>
            </div>
            <div class="col-sm-12">
                <input id="chkClassParent" name="classReports" type="checkbox" value="6" style="cursor: pointer;"
                     @(list.Any(e => e.ReportType == ReportTypeEnum.Class && e.Report == ReportEnum.Parent) ? "checked" : "")>
                <label for="chkClassParent">Parent </label>
            </div>
            <div class="col-sm-12">
                <input id="chkClassCostomScoreReport" name="classReports" type="checkbox" value="7" style="cursor: pointer;"
                       @(list.Any(e => e.ReportType == ReportTypeEnum.Class && e.Report == ReportEnum.CustomScoreReport) ? "checked" : "")>
                <label for="chkClassCostomScoreReport">Custom Score Report </label>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="col-sm-12">
                <input id="chkStudentSummary" name="studentReports" type="checkbox" value="2" style="cursor: pointer;"
                     @(list.Any(e => e.ReportType == ReportTypeEnum.Student && e.Report == ReportEnum.Summary) ? "checked" : "")>
                <label for="chkStudentSummary">Summary </label>
            </div>
            <div class="col-sm-12">
