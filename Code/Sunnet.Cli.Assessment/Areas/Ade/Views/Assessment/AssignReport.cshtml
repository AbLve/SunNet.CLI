                     @(list.Any(e => e.ReportType == ReportTypeEnum.School && e.Report == ReportEnum.Summary) ? "checked" : "")>
                <label for="chkSchoolSummary">Summary </label>
            </div>
            <div class="col-sm-12">
                <input id="chkSchoolGrowth" name="schoolReports" type="checkbox" value="3" style="cursor: pointer;"
                     @(list.Any(e => e.ReportType == ReportTypeEnum.School && e.Report == ReportEnum.Growth) ? "checked" : "")>
                <label for="chkSchoolGrowth">Growth </label>
            </div>
            <div class="col-sm-12">
                <input id="chkSchoolPercentileRank" name="schoolReports" type="checkbox" value="4" style="cursor: pointer;"
                     @(list.Any(e => e.ReportType == ReportTypeEnum.School && e.Report == ReportEnum.PercentileRank) ? "checked" : "")>
                <label for="chkSchoolPercentileRank">Percentile Rank </label>
            </div>
