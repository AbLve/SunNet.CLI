@section Scripts
{
    <script type="text/javascript">
        var vm = {};
        var wave = eval($("#selectWave").val());
        var teacherId = eval('@ViewBag.teacherId');
        var assessmentId = eval('@ViewBag.assessmentId');
        var ViewModel = function() {
            var self = this;
            self.items = ko.observableArray();
            self.search = function() {
                $.getJSON('@Url.Action("ShowItems")', { teacherId: teacherId, assessmentId: assessmentId, wave: wave },
                    function(result) {
                        if (result && result.success) {
                            if (result.msg && result.msg != "") {
                                $("#btnSubmit").hide();
                                $("#btnCancel").hide();
                                $("#cecReport").show();
                                $("#cecReport").attr("href", '@Url.Action("CECReport", "CEC")?year=@(ViewBag.Year)&teacherId=@(Request.QueryString["teacherId"])&assessmentId=@(Request.QueryString["assessmentId"])&wave='
                                    + $("#selectWave").val());

                                $("#assessmentDate").val(result.msg);
                            } else {
                                $("#btnSubmit").show();
                                $("#btnCancel").show();
                                $("#assessmentDate").val();
                                $("#cecReport").hide();
                            }
                            self.items(result.data);
                        } else {
                            self.items(null);
                            $("#btnSubmit").hide();
                            $("#btnCancel").hide();
                            $("#cecReport").hide();
                        }
                    });
            };
            self.save = function() {
                if (Validate()) {
                    var itemAnswer = "";
                    var itemAnswerTmp = [];
                    $.each($(":radio"), function(index, item) {
                        if ($(item).prop("checked")) {
                            itemAnswer += $(item).attr("parentId") + "," + $(item).prop("id") + "&";
                            itemAnswerTmp.push($(item).prop("id"));
                        }
                    });

                    $.getJSON("@Url.Action("Save")", {
                        teacherId: teacherId,
                        assessmentId: assessmentId,
                        assessmentDate: $("#assessmentDate").val(),
                        wave: wave,
                        itemAnswer: itemAnswer
                    }, function(response) {
                        if (response.success == true) {
                            window.showMessage("success");
                            $("#btnSubmit").hide();
                            $("#btnCancel").hide();
                            $("#cecReport").show();
                            $("#cecReport").attr("href", '@Url.Action("CECReport", "CEC")?year=@(ViewBag.Year)&teacherId=@(Request.QueryString["teacherId"])&assessmentId=@(Request.QueryString["assessmentId"])&wave='
                                + $("#selectWave").val());
                        } else {
                            window.showMessage("fail", response.msg);
                        }
                    });
                }
            };
        };

        function Validate() {
            if ($.trim($("#assessmentDate").val()).length == 0) {
                window.showMessage("hint", "EnterAssessmentDate");
                return false;
            }

            var itemMsg = "";
            $.each($(".divAnswer"), function (index, item) {
                if ($(item).find("[_isRequired=true]").is(":checked")==false) {
                    $.each($(item).find("[_isRequired=true]"), function (childIndex, childItem) {
                        //var itemName = $(this).attr("_itemName");
                        //itemMsg = itemMsg + itemName + "; ";
                        itemMsg = itemMsg + (index + 1) + "; ";
                        return false;
                    });
                }
            });
            if (itemMsg.length > 0) {
                itemMsg = itemMsg.substring(0, itemMsg.lastIndexOf(';'));
                itemMsg = "<br\><span style='color:#000'>The following items require a score before proceeding:<br /><br />Item " + itemMsg + "<span>";
                window.showMessage("warning", itemMsg);
                return false;
            } 

            return true;
        };

        $(document).ready(function() {
            vm = new ViewModel();
            ko.applyBindings(vm);
            vm.search();

            $("#selectWave").change(function() {
                if ($(this).val() > 0) {
                    wave = eval($(this).val());
                    $("#assessmentDate").val("");
                    vm.search();
                }
            });
        });
    </script>

}
