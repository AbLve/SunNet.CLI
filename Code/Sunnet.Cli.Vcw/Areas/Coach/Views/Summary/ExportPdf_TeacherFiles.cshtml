@using Sunnet.Cli.Business.Vcw.Models;
@using Sunnet.Framework.Extensions;
@using Sunnet.Cli.Business.Common;
@using Sunnet.Cli.UIBase.Models
@{
    ViewBag.Title = "pdf";
    Layout = "~/Views/Shared/_Layout_Report.cshtml";
}
<div class="main-content main-content">
    <div class="content-body-tab">
        <table class="table table-striped table-hover" width="99%">
            <thead>
                <th>File Name</th>
                <th>ID</th>
                <th>Community</th>
                <th>School</th>
                <th>Teacher</th>
                <th>Context</th>
                <th>Content</th>
                <th>Status</th>
                <th>Recorded</th>
                <th>Type</th>
            </thead>
            <tbody>
                @foreach (FileListModel item in (List<FileListModel>)ViewBag.List)
                {
                    <tr>
                        <td style="width: 10%; text-align: center">@item.IdentifyFileName</td>
                        <td style="width: 8%; text-align: center">@item.Number</td>
                        <td style="width: auto; text-align: center">@item.CommunityName</td>
                        <td style="width: 10%; text-align: center">@item.SchoolName</td>
                        <td style="width: 10%; text-align: center">@(item.TeacherName)</td>
                        <td style="width: 10%; text-align: center">@(item.Context)</td>
                        <td style="width: 12%; text-align: center">@(item.Content)</td>
                        <td style="width: 7%; text-align: center">@item.Status.ToDescription()</td>
                        <td style="width: 7%; text-align: center">@(item.DateRecorded.FormatDateString())</td>
                        <td style="width: 7%; text-align: center">@item.FileExtension</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

