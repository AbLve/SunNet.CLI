@using Sunnet.Cli.Core.BUP.Models
@{
    Layout = "~/Views/Shared/_Modal_Layout.cshtml";
    List<BUPClassroomModel> entities = ViewBag.Entities;
    ViewBag.Title = "Classroom";
}

<style type="text/css">
    .modal-main-content {
        padding-top: 0px;
    }
</style>

<form class="form-horizontal">
    <div class="main-content main-content">
        <div class="content-title">Error Records</div>
        <div class="content-body-tab">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 2%">#</th>
                        <th style="width: 10%">Action</th>
                        <th style="width: 30%">Name</th>
                        <th style="width: 15%">Engage ID</th>
                        <th style="width: auto">Error Message</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (BUPClassroomModel item in entities)
                    {
                        <tr>
                            <td>@(item.LineNum)</td>
                            <td>@(item.Action.ToString())</td>
                            <td>@(item.Name)</td>
                            <td>@(item.ClassroomEngageId)</td>
                            <td>@(item.Remark)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>
